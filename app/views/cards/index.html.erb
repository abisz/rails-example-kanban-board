<p id="notice"><%= notice %></p>

<h1>Cards</h1>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Status</th>
      <th>Board</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @cards.each do |card| %>
      <tr>
        <td><%= card.title %></td>
        <td><%= card.status %></td>
        <td><%= card.board_id %></td>
        <td><%= link_to 'Show', board_card_path(card.board_id, card.id) %></td>
        <td><%= link_to 'Edit', edit_board_card_path(card.board_id, card.id) %></td>
        <td><%= link_to 'Destroy', board_card_path(card.board_id, card.id), method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Card', new_board_card_path(@board_id) %>
